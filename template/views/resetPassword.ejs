<div class="row login-box bodyLogin">
    <div class="col-6 col-sm-4 col-lg-4 m-auto">
        <div class="box-container">
            <div class="close"><a href="/users/login">Retour</a></div>
            <h1>Reset Password</h1>
            <%- include ('../partials/messages') %>

            <form class="m-3 review-form-box" id="formRegister" action="/resetPassword/<%= token %> " method="POST">
                <div class="form-row mb-3">
                    <div class="form-group col-md-6">
                        <label for="password" class="mb-0">New Password</label>
                        <input
                        class="form-control"
                        type="password"
                        name="password"
                        placeholder="Password"
                        required
                        />
                    </div>

                    <div class="form-group col-md-6">
                        <label for="password2" class="mb-0">Confirm New Password</label>
                        <input
                        class="form-control"
                        type="password"
                        name="password2"
                        placeholder="Confirm Password"
                        required
                        />
                    </div>
                </div>
                <button type="submit" class="btn btn-primary m-auto btn-submit-login">Reset Password</button>
            </form>
            
        </div>
    </div>   
</div>
