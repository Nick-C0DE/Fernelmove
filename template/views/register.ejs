    <form class="col-6 col-sm-4 col-lg-4 m-auto" action="/register" method="POST">
        <h1>INSCRIPTION</h1>
        <div class="mb-3 ">
            <%- include ('../partials/messages') %>
            <label for="InputUsername" class="form-label">Ton pseudo</label>
            <input type="name" class="form-control" id="InputUsername" placeholder="Pseudo" name="name" value="<%= typeof name != 'undefined' ? name : '' %>" required>
        </div>
        <div class="mb-3 ">
        <label for="InputEmail" class="form-label">Ton adresse Email</label>
        <input type="email" class="form-control" id="InputEmail" aria-describedby="emailHelp" placeholder="123@.com" name="email" value="<%= typeof email != 'undefined' ? email : '' %>" required>
        <div id="emailHelp" class="form-text">Nous ne partagerons jamais ton adresse Email.</div>
        </div>
        <div class="mb-3">
        <label for="InputPassword" class="form-label">Ton mot de passe</label>
        <input type="password" class="form-control" id="InputPassword" name="password" value="<%= typeof password != 'undefined' ? password : '' %>" required>
        </div>
        <div class="mb-3">
            <label for="InputPasswordConfirmation" class="form-label">Confirme ton mot de passe</label>
            <input type="password" class="form-control" id="InputPasswordConfirmation" name="password2" value="<%= typeof password2 != 'undefined' ? password2 : '' %>" required>
            <div id="emailHelp" class="form-text">Ne partage jamais ton mot de passe, Il est privé!</div>
        </div>
        <div class="col-6 col-sm-6 col-lg-6 m-auto">
            <select class="form-select" aria-label="select gender " value="<%= typeof sexe != 'undefined' ? sexe : '' %>" required>
                <option selected>ton sexe</option>
                <option value="boy">Garçon</option>
                <option value="girl">Fille</option>
                <option value="nope">Ne veut pas dire</option>
            </select>
            <select class="form-select" aria-label="select gender ">
            <option selected>date de naissance // a faire </option>
            </select>
        </div>
        <input class="form-control" type="text" placeholder="Code Postale" aria-label="Code Postale" type="number" name="postalCode" value="<%= typeof postalCode != 'undefined' ? postalCode : '' %>" required>
        <button type="submit" class="btn btn-primary m-auto">ENVOYER</button>
    </form>
